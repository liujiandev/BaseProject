<?xml version="1.0" encoding="utf-8"?>
<com.sky.health.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detection_gridview_selector"
    android:padding="5dp">
    <TextView
        android:textColor="@color/home_text_color"
        android:textSize="16sp"
        android:id="@+id/itemName"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="6dp"
        android:layout_above="@id/itemName"
        android:id="@+id/itemIcon"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.sky.health.view.SquareLayout>